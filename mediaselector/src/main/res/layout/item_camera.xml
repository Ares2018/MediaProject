<?xml version="1.0" encoding="utf-8"?>
<com.zjrb.daily.mediaselector.ui.widget.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_999999"
    app:ratio_w2h="1:1">

    <ImageView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_camera"
        android:layout_gravity="center"
        android:scaleType="fitXY"

        />

    <TextView
        android:id="@+id/tv_title_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="@string/picture_take_picture"
        android:textColor="@color/_ffffff" />
</com.zjrb.daily.mediaselector.ui.widget.RatioFrameLayout>